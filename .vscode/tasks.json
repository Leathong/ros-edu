{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "clippy",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "check"
		},
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "build-os"
		},
		{
			"label": "copy-bin",
			"type": "shell",
			"dependsOn":[
				"build-os"
			],
			"command": "rust-objcopy --strip-all ${workspaceFolder}/target/riscv64gc-unknown-none-elf/debug/ros-edu -O binary ${workspaceFolder}/target/riscv64gc-unknown-none-elf/debug/ros-edu.bin",
		},
		{
			"label": "run",
			"type": "shell",
			"dependsOn": [
				"copy-bin"
			],
			"isBackground": true,
			"problemMatcher": {
                "pattern":[
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^qemu-system-riscv64.*",
                    "endsPattern": "^CPU Reset.*"
                }
            },
			"command": "qemu-system-riscv64 -d page,cpu_reset,guest_errors -machine virt -nographic -bios ${workspaceFolder}/bootloader/rustsbi-qemu.bin -device loader,file=${workspaceFolder}/target/riscv64gc-unknown-none-elf/debug/ros-edu.bin,addr=0x80200000 -s -S"
		}
	]
}