{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "clippy",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "check",
		},
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"args": [
				"--release",
			],
			"group": "build",
			"label": "build-os",
		},
		{
			"label": "copy-bin",
			"type": "shell",
			"dependsOn":[
				"build-os"
			],
			"command": "rust-objcopy --strip-all ${workspaceFolder}/target/riscv64gc-unknown-none-elf/release/ros -O binary ${workspaceFolder}/target/riscv64gc-unknown-none-elf/release/ros.bin",
		},
		{
			"label": "run",
			"type": "shell",
			"dependsOn": [
				"copy-bin"
			],
			"command": ""
		}
	]
}